# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///linkedin_agent.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/linkedin_agent

# LinkedIn API Configuration
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token
LINKEDIN_REDIRECT_URI=http://localhost:5000/auth/linkedin/callback

# AI Services Configuration
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key
STABILITY_API_KEY=your-stability-ai-api-key

# Redis Configuration (for task queue)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key
BCRYPT_LOG_ROUNDS=12

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=static/uploads

# Automation Limits
DAILY_CONNECTION_LIMIT=100
DAILY_FOLLOW_LIMIT=150
DAILY_LIKE_LIMIT=300
DAILY_COMMENT_LIMIT=50
DAILY_MESSAGE_LIMIT=20

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Application Settings
APP_NAME=LinkedIn Marketing Agent
APP_VERSION=1.0.0
TIMEZONE=UTC